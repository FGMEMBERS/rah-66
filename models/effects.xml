<PropertyList>

	<!-- effects -->

	<model>
		<name>flame</name>
		<path>Aircraft/rah-66/models/effects/flame.xml</path>
		<condition>
			<equals>
				<property>controls/armament/trigger</property>
				<value type="bool">true</value>
			</equals>
		</condition>
	</model>

	<model>
		<name>fire</name>
		<path>Aircraft/rah-66/models/effects/fire.xml</path>
