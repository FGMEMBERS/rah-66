			<equals>
				<property>sim/crashed</property>
				<value type="bool">true</value>
			</equals>
		</condition>
		<offsets>
			<x-m>-1.05</x-m>
			<y-m> 0.00</y-m>
			<z-m> 0.75</z-m>
			<heading-deg>0</heading-deg>
